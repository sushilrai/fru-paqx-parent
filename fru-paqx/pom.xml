        </dependency>

    </dependencies>

    <build>
        <plugins>

            <!--<plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-war-plugin</artifactId>
                <version>2.6</version>
                <configuration>
                    <failOnMissingWebXml>false</failOnMissingWebXml>
                </configuration>
            </plugin>-->

            <plugin>
                <groupId>org.springframework.boot</groupId>
                <artifactId>spring-boot-maven-plugin</artifactId>
                <version>${spring-boot.version}</version>
                <executions>
                    <execution>
                        <goals>
                            <goal>repackage</goal>
                        </goals>
                    </execution>
                </executions>
            </plugin>

            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-surefire-plugin</artifactId>
                <configuration>
                    <excludes>
                        <exclude>**/*IntegrationTest*</exclude>
                        <!--<exclude>**/*IT.java</exclude>-->
                    </excludes>
                </configuration>
            </plugin>

            <plugin>
                <groupId>org.jacoco</groupId>
                <artifactId>jacoco-maven-plugin</artifactId>
                <version>${jacoco-maven-plugin.version}</version>
            </plugin>

            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-failsafe-plugin</artifactId>
                <version>${maven-failsafe-plugin.version}</version>
            </plugin>

            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-dependency-plugin</artifactId>
                <version>2.10</version>
                <executions>
                    <execution>
                        <id>unpack-json-schemas-virtualization-capabilities-api</id>
                        <phase>generate-sources</phase>
                        <goals>
                            <goal>unpack-dependencies</goal>
                        </goals>
                        <configuration>
                            <includeGroupIds>com.dell.cpsd.virtualization.capabilities.api</includeGroupIds>
                            <includeArtifactIds>virtualization-capabilities-api</includeArtifactIds>
                            <includes>**\/*.jsd</includes>
                        </configuration>
                    </execution>
                    <execution>
                        <id>unpack-json-schemas-storage-capabilities-api</id>
                        <phase>generate-sources</phase>
                        <goals>
                            <goal>unpack-dependencies</goal>
                        </goals>
                        <configuration>
                            <includeGroupIds>com.dell.cpsd.storage.capabilities.api</includeGroupIds>
                            <includeArtifactIds>storage-capabilities-api</includeArtifactIds>
                            <includes>**\/*.jsd</includes>
                        </configuration>
                    </execution>
                    <execution>
                        <phase>generate-sources</phase>
                        <id>unpack-json-schemas-compute-discovered-nodes-capabilities-api</id>
                        <goals>
                            <goal>unpack-dependencies</goal>
                        </goals>
                        <configuration>
                            <includeGroupIds>com.dell.converged.capabilities.compute</includeGroupIds>
                            <includeArtifactIds>discovered-nodes-capabilities-api</includeArtifactIds>
                            <includes>**\/*.jsd</includes>
                        </configuration>
                    </execution>
                </executions>
            </plugin>
            <plugin>
                <groupId>org.jsonschema2pojo</groupId>
                <artifactId>jsonschema2pojo-maven-plugin</artifactId>
                <version>0.4.34</version>
                <dependencies>
                    <dependency>
                        <groupId>com.dell.cpsd.common.messaging</groupId>
                        <artifactId>common-contract-enricher</artifactId>
                        <version>1.4-SNAPSHOT</version>
                    </dependency>
                </dependencies>
                <executions>
                    <execution>
                        <id>generate-json-type-virtualization-capabilities-api</id>
                        <phase>generate-resources</phase>
                        <goals>
                            <goal>generate</goal>
                        </goals>
                        <configuration>
                            <sourceDirectory>
                                ${project.build.directory}/dependency/virtualization-capabilities-api/schema/json
                            </sourceDirectory>
                            <targetPackage>
                                com.dell.cpsd.virtualization.capabilities.api
                            </targetPackage>
                            <outputDirectory>
                                ${project.build.directory}/generated-sources/virtualization-capabilities-api
                            </outputDirectory>
                            <removeOldOutput>false</removeOldOutput>
                            <useLongIntegers>true</useLongIntegers>
                            <generateBuilders>true</generateBuilders>
                            <includeConstructors>true</includeConstructors>
                            <includeAdditionalProperties>false</includeAdditionalProperties>
                            <serializable>false</serializable>
                            <useCommonsLang3>true</useCommonsLang3>
                            <includeJsr303Annotations>true</includeJsr303Annotations>
                            <sourceSortOrder>FILES_FIRST</sourceSortOrder>
                            <customAnnotator>
                                com.dell.cpsd.common.contract.enricher.plugins.jsonschema2pojo.MessageAnnotator
                            </customAnnotator>
                            <customRuleFactory>
                                com.dell.cpsd.common.contract.enricher.plugins.jsonschema2pojo.DefaultRuleFactory
                            </customRuleFactory>
                        </configuration>
                    </execution>
                    <execution>
                        <id>generate-json-type-storage-capabilities-api</id>
                        <phase>generate-resources</phase>
                        <goals>
                            <goal>generate</goal>
                        </goals>
                        <configuration>
                            <sourceDirectory>
                                ${project.build.directory}/dependency/storage-capabilities-api/schema/json
                            </sourceDirectory>
                            <targetPackage>
                                com.dell.cpsd.storage.capabilities.api
                            </targetPackage>
                            <outputDirectory>
                                ${project.build.directory}/generated-sources/storage-capabilities-api
                            </outputDirectory>
                            <removeOldOutput>false</removeOldOutput>
                            <useLongIntegers>true</useLongIntegers>
                            <generateBuilders>true</generateBuilders>
                            <includeConstructors>true</includeConstructors>
                            <includeAdditionalProperties>false</includeAdditionalProperties>
                            <serializable>false</serializable>
                            <useCommonsLang3>true</useCommonsLang3>
                            <includeJsr303Annotations>true</includeJsr303Annotations>
                            <sourceSortOrder>FILES_FIRST</sourceSortOrder>
                            <customAnnotator>
                                com.dell.cpsd.common.contract.enricher.plugins.jsonschema2pojo.MessageAnnotator
                            </customAnnotator>
                            <customRuleFactory>
                                com.dell.cpsd.common.contract.enricher.plugins.jsonschema2pojo.DefaultRuleFactory
                            </customRuleFactory>
                        </configuration>
                    </execution>
                    <execution>
                        <id>generate-json-model-compute-discovered-nodes-capabilities-api</id>
                        <phase>generate-resources</phase>
                        <goals>
                            <goal>generate</goal>
                        </goals>
                        <configuration>
                            <sourceDirectory>${project.build.directory}/dependency/discovered-nodes-capabilities/schema/json
                            </sourceDirectory>
                            <targetPackage>com.dell.converged.capabilities.compute.discovered.nodes.api</targetPackage>
                            <outputDirectory>${project.build.directory}/generated-sources/discovered-nodes-capabilities</outputDirectory>
                            <useLongIntegers>true</useLongIntegers>
                            <removeOldOutput>true</removeOldOutput>
                            <generateBuilders>true</generateBuilders>
                            <includeConstructors>true</includeConstructors>
                            <includeAdditionalProperties>true</includeAdditionalProperties>
                            <serializable>false</serializable>
                            <sourceSortOrder>FILES_FIRST</sourceSortOrder>
                            <customAnnotator>com.dell.cpsd.common.contract.enricher.plugins.jsonschema2pojo.MessageAnnotator
                            </customAnnotator>
                            <customRuleFactory>com.dell.cpsd.common.contract.enricher.plugins.jsonschema2pojo.DefaultRuleFactory
                            </customRuleFactory>
                        </configuration>
                    </execution>
                </executions>
            </plugin>
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-gpg-plugin</artifactId>
            </plugin>
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-source-plugin</artifactId>
            </plugin>
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-javadoc-plugin</artifactId>
            </plugin>
        </plugins>
    </build>

</project>
